<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"	      
	    android:orientation="vertical" 
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"	   
	    android:background="@drawable/product_update_border"
	    >


	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="5dp"	    
	    android:background="@drawable/product_update_border2"
	    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	   	android:padding="7dp"
	    android:orientation="vertical"    
	    android:background="@drawable/product_update_border3"
	    >	    
	    
	<!-- android:background="@color/background_holo_light" 	 -->  
	    <EditText
	        android:id="@+id/detail_product_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingBottom="15dp"
	        android:maxLines="3"
	        android:padding="2dp"
	        android:textColor="@color/Blue" 
	        android:background="@color/background_holo_light" 
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="10dp">
	    </View> 

	    <ImageView
	        android:id="@+id/detail_product_image"
	        android:layout_width="wrap_content"
	        android:layout_height="120dp"	 
	        android:layout_gravity="center"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"	        
	        />	    
	    
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="15dp">
	    </View>    
	    
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:padding="2dp" 
		    >	
	    	<TextView
	    	    android:id="@+id/product_detail_regular_price_label"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:gravity="center"
	    	    style="@style/label2" 
	    	    android:text="Regular Price:  "
	    	    />	        

	        <EditText
	            android:id="@+id/detail_product_regular_price"
	            style="@style/regularPriceStyle2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:background="@color/background_holo_light"
	            android:inputType="numberDecimal"
	           	android:padding="2dp"
	            android:textColor="@color/Blue" />
		             
	    </LinearLayout>
	    
	    
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:padding="2dp" 
		    >	
	    	<TextView
	    	    android:id="@+id/detail_product_sale_price_label"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"	  
	    	    android:gravity="left"
	    	    style="@style/label2" 
	    	    android:text="Sale Price      :  "
	    	    />	        

	        <EditText
	            android:id="@+id/product_detail_sale_price"
	            style="@style/salePriceStyle2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:background="@color/background_holo_light"
	            android:inputType="numberDecimal"
          	    android:padding="2dp"
	            android:textColor="@color/Blue" />
		             
	    </LinearLayout>

	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="10dp">
	    </View> 

	
	    <TextView
	        android:id="@+id/description_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/production_description"
	        style="@style/descriptionLabelStyle" 
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        />
	
	    <EditText
	        android:id="@+id/detail_product_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/descriptionStyle"
	        android:paddingBottom="20dp"
	        android:maxLines="6"
	       	android:padding="2dp"
	        android:background="@color/background_holo_light" 
	        />
	    
 <View style="@style/Divider"/>
	    
 <!-- Filler to push the buttons to bottom of the Screen. -->   
 <TextView 
       android:layout_width="fill_parent" 
       android:layout_height="wrap_content"
       android:layout_weight="1">
 </TextView>
	     
		 
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:weightSum="2"
		    android:background="@color/ActionBarBackGroundColor"
		    >
	
	        <Button
	            android:id="@+id/btn_detail_product_cancel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Reset"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_weight="1" 
	
	            />
	
	        <Button
	            android:id="@+id/btn_detail_product_update"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/update"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_weight="1" 	            
	            />	                            
	    </LinearLayout>		    
  	
	</LinearLayout>	
	</LinearLayout>
</LinearLayout>	 	

</ScrollView>