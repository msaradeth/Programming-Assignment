<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 
<LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="match_parent"	      
    android:orientation="vertical" 
    android:padding="5dp"   
    android:background="@drawable/product_update_border"
    >
	<!-- android:background="@color/background_holo_light" 	 -->  

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:padding="5dp"	    
	    android:background="@drawable/product_update_border2"
	    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	   	android:padding="15dp"
	    android:orientation="vertical"    
	    android:background="@drawable/product_update_border3"
	    >	    
	    <EditText
	        android:id="@+id/detail_product_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/input_border"
	        android:maxLines="4"
	        android:gravity="top"
	        android:padding="5dp"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/Blue" />
	    
 <View style="@style/DividerX"/> 

	    <ImageView
	        android:id="@+id/detail_product_image"
	        android:layout_width="wrap_content"
	        android:layout_height="200dp"	 
	        android:layout_gravity="center"
	        android:scaleType="fitCenter"
	        android:adjustViewBounds="true"	        
	        />	    
	    
 <View style="@style/DividerX"/> 
 
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:padding="2dp" 
		    >	
	    	<TextView
	    	    android:id="@+id/product_detail_regular_price_label"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:gravity="right"
	    	    style="@style/label2" 
	    	    android:text="Regular Price:  "
	    	    />	        

	        <EditText
	            android:id="@+id/detail_product_regular_price"
	            style="@style/regularPriceStyleL"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:background="@drawable/input_border"
	            android:inputType="numberDecimal"
	           	android:padding="5dp"
	            android:textColor="@color/Blue" />
		             
	    </LinearLayout>
	    
 <View style="@style/Divider"/>
  	    
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:padding="2dp" 
		    >	
	    	<TextView
	    	    android:id="@+id/detail_product_sale_price_label"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"	  
	    	    android:gravity="left"
	    	    style="@style/label2" 
	    	    android:text="Sale Price      :  "
	    	    />	        

	        <EditText
	            android:id="@+id/product_detail_sale_price"
	            style="@style/salePriceStyleL"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:background="@drawable/input_border"
	            android:inputType="numberDecimal"
          	    android:padding="5dp"
	            android:textColor="@color/Blue" />
		             
	    </LinearLayout>

<View style="@style/DividerX"/>		
 

	
	    <TextView
	        android:id="@+id/description_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/production_description"
	        style="@style/descriptionLabelStyle" 
	        />
	
	    <EditText
	        android:id="@+id/detail_product_description"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/input_border"
	        style="@style/descriptionStyleL"
	        android:maxLines="10"
	       	android:padding="5dp"
	       	android:gravity="top"
	        />
	    
 <View style="@style/DividerX"/>
	    
 <!-- Filler to push the buttons to bottom of the Screen. -->   
 <TextView
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_weight="1" >

 </TextView>
	     
		 
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:weightSum="2"
		    android:background="@color/ActionBarBackGroundColor"
		    >
	
	        <Button
	            android:id="@+id/btn_detail_product_cancel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Reset"
	            android:layout_weight="1" 
	
	            />
	
	        <Button
	            android:id="@+id/btn_detail_product_update"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/update"
	            android:layout_weight="1" 	            
	            />	                            
	    </LinearLayout>	
	    	    
   	
	</LinearLayout>	 
	</LinearLayout>	 
</LinearLayout>



</ScrollView>
